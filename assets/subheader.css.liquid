.subheader {
  position: relative;
  width: 100%;
  padding: 21px 19.3%;
}

@media(max-width: 1720px) {
  .subheader {
    padding: 21px 8.65%;
  }
}

.submenu__container {
  width: 100%;
  list-style-type: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.submenu__container li {
  transition: opacity 0.2s ease;
}

.submenu__container li:hover {
  opacity: 0.7;
  cursor: pointer;
  color: #F9A82F;
}

#dropdown {
  position: absolute;
  padding: 14px 16px;
  display: flex;
  flex-direction: column;
  color: #A9A9A9;
  font-weight: 700;
  transition: all 0.2s ease;
  background: #FFFFFF;
  z-index: 100;
}

#dropdown.hidden {
  opacity: 0;
  pointer-events: none;
  transform: scale(0) translateX(-130%);
}

#dropdown a {
  transition: color 0.2s ease;
  padding: 5px 5px 5px 0;
}

#dropdown a:hover {
  color: #F9A82F;
}

.burger-menu {
  position: absolute;
  right: 2%;
  top: 6px;
  width: 30px;
  height: 30px;
  border: 2px solid #F9A82F;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  border-radius: 5px;
  transition: 0.35s;
  opacity: 0;
  pointer-events: none;
}

.burger-menu:hover {
  cursor: pointer;
  opacity: 0.7;
}

.burger-line {
  width: 90%;
  height: 1px;
  background: #000000;
  position: relative;
  transition: 0.35s;

}

@media(max-width: 580px) {
  .submenu__container {
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    max-height: 0;
    transition: all 0.7s ease;
  }

  #dropdown {
    top: 20%;
    left: 25%;
  }

  .submenu__container.show {
    opacity: 1;
    max-height: 100%;
  }

  .burger-menu {
    opacity: 1;
    pointer-events: all;
  }

  .burger-menu.active {
    justify-content: space-around;
  }

  .burger-menu.active .burger-line:nth-child(1) {
    transform: rotate(45deg);
    transform-origin: 0 0;
    left: 4px;
  }

  .burger-menu.active .burger-line:nth-child(2) {
    opacity: 0;
  }

  .burger-menu.active .burger-line:nth-child(3) {
    transform: rotate(-45deg);
    transform-origin: 0 0;
    left: 4px;
  }
}