.aboutUs__container {
  padding: 109px 0 30px 19.3%;
}

@media(max-width: 1720px) {
  .aboutUs__container {
    padding: 35px 0 30px 8.65%;
  }
}

.aboutUs {
  display: flex;
  gap: 10px;
  align-items: center;
}

.aboutUs img {
  width: 56%;
}

.aboutUs__text h2 {
  font-weight: 700;
  font-size: 36px;
  line-height: 30px;
  color: #151515;
}

.aboutUs__text p {
  margin-top: 50px;
  font-weight: 300;
  font-size: 16px;
  line-height: 30px;
  color: #646464;
}

.aboutUs__button {
  margin-top: 42px;
  width: 123px;
  height: 42px;
  color: #FFFFFF;
  padding: 11px 20px;
  background: #F9A82F;
  border-radius: 100px;
  outline: none;
  border: none;
  transition: 0.35s;
}

.aboutUs__button:hover {
  cursor: pointer;
  background: #000000;
  color: #FFFFFF;
}

@media(max-width: 960px) {
  .aboutUs__text h2 {
    font-size: 26px;
    line-height: 20px;
  }

  .aboutUs__text p {
    line-height: 20px;
    font-size: 12px;
  }

  .aboutUs__button {
    margin-top: 20px;
  }
}

@media(max-width: 580px) {
  .aboutUs__container {
    padding: 20px 0 25px 8.65%;
  }
  .aboutUs__text h2 {
    font-size: 22px;
    line-height: 20px;
  }

  .aboutUs__text p {
    margin-top: 20px;
    line-height: 16px;
    font-size: 11px;
  }

  .aboutUs__button {
    margin-top: 15px;
  }
}