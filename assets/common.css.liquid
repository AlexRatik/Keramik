* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 400;
}

a {
  color: inherit;
  text-decoration: none;
}

.font16x700_000000 {
  font-weight: 700;
  font-size: 16px;
  color: #000000;
}

.font16x700_171717 {
  font-weight: 700;
  font-size: 16px;
  color: #000000;
}

.centred-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mango-svg path {
  transition: 0.35s;
}

.mango-svg:hover {
  cursor: pointer;
}

.mango-svg:hover path {
  fill: #C031F2;
}